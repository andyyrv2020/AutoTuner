@{
    ViewData["Title"] = "AutoTuner AI";
}

<div class="container-hero">
    <section class="hero-section shadow-gradient text-white">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <div class="row g-4 align-items-center">
                <div class="col-lg-7">
                    <h1 class="hero-title mb-3">Intelligent Performance Optimization</h1>
                    <p class="hero-subtitle mb-0">
                        Unlock hidden horsepower, dial in torque delivery, and visualize every gain before you hit the road.
                        AutoTuner AI blends expert rules with data-driven predictions tailored to your driving style.
                    </p>
                    <div class="hero-badges">
                        <span class="hero-badge">Dyno-inspired analytics</span>
                        <span class="hero-badge">AI assisted builds</span>
                        <span class="hero-badge">Real-time workshop map</span>
                    </div>
                    <div class="hero-cta d-flex flex-wrap gap-3">
                        <a asp-controller="Car" asp-action="Create" class="btn btn-accent btn-lg px-4">Start a build</a>
                        <a asp-controller="Recommendation" asp-action="Index" class="btn btn-outline-accent btn-lg px-4 text-white">See recommendations</a>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="performance-card">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h6 class="mb-1">Featured setup</h6>
                                <h4 class="mb-0">2024 BMW M3 Competition</h4>
                            </div>
                            <span class="badge-soft">+18% output</span>
                        </div>
                        <div class="performance-stat">
                            <div>
                                <h6 class="mb-1">Horsepower</h6>
                                <small class="text-uppercase">Before</small>
                            </div>
                            <span>473 ➜ 558 hp</span>
                        </div>
                        <div class="performance-stat">
                            <div>
                                <h6 class="mb-1">Torque</h6>
                                <small class="text-uppercase">Before</small>
                            </div>
                            <span>406 ➜ 480 lb-ft</span>
                        </div>
                        <div class="performance-stat">
                            <div>
                                <h6 class="mb-1">Efficiency</h6>
                                <small class="text-uppercase">Urban cycle</small>
                            </div>
                            <span>+7%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<section class="mt-5">
    <div class="d-flex justify-content-between flex-wrap align-items-center mb-3">
        <div>
            <div class="section-title">Built for enthusiasts</div>
            <h2 class="fw-bold">Tools to plan, tune, and monitor every upgrade</h2>
        </div>
        <p class="text-muted mb-0" style="max-width: 420px;">
            Compare before vs after metrics, keep a ledger of costs, and track the health of every build from intake to dyno day.
        </p>
    </div>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card h-100">
                <i class="fa-solid fa-gauge-high"></i>
                <h5 class="fw-semibold">Predictive Performance</h5>
                <p class="muted-text mb-0">Blend horsepower, torque, and weight modeling with AI heuristics to project realistic gains before committing to parts.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card h-100">
                <i class="fa-solid fa-chart-line"></i>
                <h5 class="fw-semibold">Live Analytics</h5>
                <p class="muted-text mb-0">Interactive Chart.js dashboards highlight delta values, cost efficiency, and long-term performance history.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card h-100">
                <i class="fa-solid fa-map-location-dot"></i>
                <h5 class="fw-semibold">Workshop Intelligence</h5>
                <p class="muted-text mb-0">Explore Leaflet-powered maps with curated tuners, specialization tags, and travel-ready directions for each build.</p>
            </div>
        </div>
    </div>
</section>

