@using AutoTuner.Extensions
@model IEnumerable<AutoTuner.Models.Car>
@{
    ViewData["Title"] = "My Cars";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    <a class="btn btn-primary" asp-action="Create">Add Car</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No cars added yet. Start by adding your first vehicle.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Horsepower</th>
                    <th>Torque</th>
                    <th>Style</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Brand</td>
                        <td>@item.Model</td>
                        <td>@item.Year</td>
                        <td>@item.HorsePower hp</td>
                        <td>@item.Torque Nm</td>
                        <td>@item.DrivingStyle.GetDisplayName()</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
