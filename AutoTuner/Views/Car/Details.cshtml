@model AutoTuner.Models.Car
@{
    ViewData["Title"] = "Car Details";
}

<h2>@Model.Brand @Model.Model (@Model.Year)</h2>
<hr />
<dl class="row">
    <dt class="col-sm-3">Engine</dt>
    <dd class="col-sm-9">@Model.EngineType</dd>

    <dt class="col-sm-3">Horsepower</dt>
    <dd class="col-sm-9">@Model.HorsePower hp</dd>

    <dt class="col-sm-3">Torque</dt>
    <dd class="col-sm-9">@Model.Torque Nm</dd>

    <dt class="col-sm-3">Weight</dt>
    <dd class="col-sm-9">@Model.Weight kg</dd>

    <dt class="col-sm-3">Drivetrain</dt>
    <dd class="col-sm-9">@Model.Drivetrain</dd>

    <dt class="col-sm-3">Driving Style</dt>
    <dd class="col-sm-9">@Model.DrivingStyle</dd>
</dl>
<div class="mt-3 d-flex gap-2">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to list</a>
    <a class="btn btn-success" asp-controller="Recommendation" asp-action="Index" asp-route-carId="@Model.Id">View Recommendations</a>
</div>
