<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoTuner AI</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SzlrxWriC3z8VV4z8a7d4vH7N6U5u0r1w6hZ+qzlJ4QYJz6D6D9C9NC0xF0kJ5l9e6x80f6+ruJ8y4C+Y1P2HQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" crossorigin="anonymous">
    </environment>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutoTuner.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="app-shell theme-light">
    <div class="ambient-bg">
        <span class="glow glow-1"></span>
        <span class="glow glow-2"></span>
        <span class="glow glow-3"></span>
    </div>
    <header class="container-xxl">
        <nav class="navbar navbar-expand-lg neon-navbar" data-bs-theme="dark">
            <div class="container-fluid px-0">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">AutoTuner AI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-lg-center gap-lg-2">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Car" asp-action="Index">Cars</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TuningPart" asp-action="Index">Parts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Recommendation" asp-action="Index">Recommendations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Workshop" asp-action="Index">Workshops</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-2 ms-lg-3">
                        <button id="theme-toggle" type="button" class="theme-toggle" aria-label="Toggle theme">
                            <i class="fa-solid fa-moon"></i>
                        </button>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main class="py-4">
        <div class="container-xxl">
            @RenderBody()
        </div>
    </main>
    <footer class="py-4 mt-auto">
        <div class="container-xxl d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3">
            <div class="footer-logo">AutoTuner AI</div>
            <div class="footer-links d-flex flex-wrap gap-3">
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <span>&copy; @DateTime.Now.Year AutoTuner AI. Built for enthusiasts.</span>
            </div>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    </environment>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.6/dist/chart.umd.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
