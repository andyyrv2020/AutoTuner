@model IEnumerable<AutoTuner.Models.TuningPart>
@{
    ViewData["Title"] = "Tuning Parts";
    bool isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    @if (isAuthenticated)
    {
        <a class="btn btn-primary" asp-action="Create">Add Part</a>
    }
</div>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var part in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">@part.Name</h5>
                        <span class="badge bg-secondary">@part.Category</span>
                    </div>
                    <p class="card-text mt-2">@part.Description</p>
                    <ul class="list-inline small text-muted">
                        <li class="list-inline-item"><strong>Power:</strong> +@part.PowerGain hp</li>
                        <li class="list-inline-item"><strong>Torque:</strong> +@part.TorqueGain Nm</li>
                        <li class="list-inline-item"><strong>Efficiency:</strong> @part.EfficiencyImpact%</li>
                    </ul>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span class="fw-bold">@part.Cost.ToString("C")</span>
                    <div class="btn-group">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@part.Id">Details</a>
                        @if (isAuthenticated)
                        {
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@part.Id">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@part.Id">Delete</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
