@model AutoTuner.Models.TuningPart
@{
    ViewData["Title"] = "Part Details";
}

<h2>@Model.Name</h2>
<p class="text-muted">@Model.Category</p>
<hr />
<p>@Model.Description</p>
<ul class="list-group list-group-flush mb-3">
    <li class="list-group-item"><strong>Power Gain:</strong> +@Model.PowerGain hp</li>
    <li class="list-group-item"><strong>Torque Gain:</strong> +@Model.TorqueGain Nm</li>
    <li class="list-group-item"><strong>Efficiency Impact:</strong> @Model.EfficiencyImpact%</li>
    <li class="list-group-item"><strong>Cost:</strong> @Model.Cost.ToString("C")</li>
    <li class="list-group-item"><strong>Driving Style:</strong> @Model.RecommendedForStyle</li>
</ul>
<a class="btn btn-secondary" asp-action="Index">Back to parts</a>
